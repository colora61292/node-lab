<div class="container">
    <div class="page-header">
        <h1 id="input-groups">物品管理</h1>
    </div>
    <div>
        <form>
            <% for(var i in itemPrototype){ %>
            <%  if(itemPrototype[i].inputType == 'text'){ %>
            <div class="form-group">
                <label for="exampleInputEmail1"><%-itemPrototype[i].name %></label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
            </div>
            <%  }else if(itemPrototype[i].inputType == 'html'){ %>
            <div class="form-group">
                <label for="htmlContent"><%-itemPrototype[i].name %></label>
                <textarea style="display:none;" id="htmlContent" name="htmlContent"></textarea>
            </div>
            <script src="/javascripts/cms/libraries/ckeditor/ckeditor.js"></script>
            <script>
                (function(){
                    var editor = CKEDITOR.instances['htmlContent'];
                    if(editor){ editor.destroy(true); }
                    CKEDITOR.replace('htmlContent',{
                        filebrowserUploadUrl  :'<%-kw.url.getUrlByPathInfo('cms/user/item-edit.htmlEditorFileUpload') %>',
                        filebrowserImageUploadUrl : '<%-kw.url.getUrlByPathInfo('cms/user/item-edit.htmlEditorFileUpload') %>',
                        bodyClass : 'container',
                        contentsCss : [
                            '/stylesheets/web/base.min.css',
                            '/stylesheets/web/bootstrap.min.css',
                            '/stylesheets/web/jquery.ui.all.css',
                            '/stylesheets/web/style.css'
                        ],
                        language: 'zh-cn',
                        allowedContent : true
                    });
                })();
            </script>
            <%  } %>
            <% } %>
