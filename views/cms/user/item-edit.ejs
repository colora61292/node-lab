<div class="container">
    <div class="page-header">
        <h1 id="input-groups"><%-pageTitle %></h1>
    </div>
    <div>
        <form method="POST" action="<%-formActionUrl %>">
            <% for(var i in itemPrototype){ %>
            <%  if(itemPrototype.hasOwnProperty(i)){ %>
            <%      if(itemPrototype[i].inputType == 'text'){ %>
            <div class="form-group">
                <label for="<%-'field['+itemPrototype[i].id+']' %>"><%-itemPrototype[i].name %></label>
                <input type="text" class="form-control" id="<%-'field['+itemPrototype[i].id+']' %>" name="<%-'field['+itemPrototype[i].id+']' %>" value="<%-item[itemPrototype[i].id] %>" />
            </div>
            <%      }else if(itemPrototype[i].inputType == 'html'){ %>
            <div class="form-group">
                <label for="<%-'field['+itemPrototype[i].id+']' %>"><%-itemPrototype[i].name %></label>
                <textarea style="display:none;" id="<%-'field['+itemPrototype[i].id+']' %>" name="<%-'field['+itemPrototype[i].id+']' %>"><%-item[itemPrototype[i].id] %></textarea>
            </div>
            <script src="/javascripts/cms/libraries/ckeditor/ckeditor.js"></script>
            <script>
                (function(){
                    var editor = CKEDITOR.instances['<%-'field['+itemPrototype[i].id+']' %>'];
                    if(editor){ editor.destroy(true); }
                    CKEDITOR.replace('<%-'field['+itemPrototype[i].id+']' %>',{
                        filebrowserUploadUrl  :'<%-kw.url.getUrlByPathInfo('cms/process/ckeditor.htmlEditorFileUpload') %>',
                        filebrowserImageUploadUrl : '<%-kw.url.getUrlByPathInfo('cms/process/ckeditor.htmlEditorFileUpload') %>',
                        bodyClass : 'container',
                        contentsCss : [
                            '/stylesheets/web/base.min.css',
                            '/stylesheets/web/bootstrap.min.css',
                            '/stylesheets/web/jquery.ui.all.css',
                            '/stylesheets/web/style.css'
                        ],
                        language: 'zh-cn',
                        allowedContent : true
                    });
                })();
            </script>
            <%      } %>
            <%  } %>
            <% } %>
            <!--<div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <div class="form-group">
                <label for="exampleInputFile">File input</label>
                <input type="file" id="exampleInputFile">
                <p class="help-block">Example block-level help text here.</p>
            </div>
            <div class="checkbox">
                <label>
                    <input type="checkbox"> Check me out
                </label>
            </div>-->
            <button type="submit" class="btn btn-default">Submit</button>
            <button type="button" class="btn btn-default" onclick="window.location='<%-backUrl %>';">Back</button>
            <button style="display:none;" type="button" class="btn btn-default" onclick="postForm('<%-deleteUrl %>');">Delete</button>
        </form>
    </div>
</div>
